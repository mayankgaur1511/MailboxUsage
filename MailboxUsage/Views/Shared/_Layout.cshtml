<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	<link href="~/Content/Site.css" rel="stylesheet" />
	<link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
	<table border="0" cellpadding="0" cellspacing="0" align="center" class="deviceWidth" style="border-collapse: collapse; color: rgb(0, 0, 0); font-family: Calibri, Arial, Times, serif;">
		<tbody>
			<tr>
				<td align="left" valign="top" class="tagline-height">
					<table style="width:100%">
						<tr>
							<td align="left" valign="bottom">
								<p style="margin: 0px; text-align: left; vertical-align: bottom;"><font color="#dc0238" face="Calibri, Arial, serif"><span style="font-size: 24px;">[</span></font><font color="#555559" face="Calibri, Arial, serif"><span style="font-size: 24px;">&nbsp @ViewBag.Title &nbsp;</span></font><font color="#dc0238" face="Calibri, Arial, serif"><span style="font-size: 24px;">]</span></font></p>
							</td>
							<td align="right" valign="bottom">
								<a href="#" alt="Arkadin" class="devicecenter" border="0" style="display: block; border: 0px; padding: 10px 0px 0px 20px;">
									<img src="~/Images/logo.png" />
								</a>
							</td>
						</tr>

					</table>
				</td>

			</tr>
			<tr>
				<td bgcolor="#dc0238">
					<div style="height: 14px;">&nbsp;</div>
				</td>
			</tr>
			

		
			<tr>
				<td bgcolor="#ffffff" style="padding: 0px 20px 20px;">
					@RenderBody()
				</td>
			</tr>
		</tbody>
	</table>


	@RenderSection("scripts", required: false)
</body>
</html>
